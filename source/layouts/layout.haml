!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "HTML5 Boilerplate"
    %meta{:content => "RubyConfIndia", :name => "description"}
    %meta{:content => "width=device-width", :name => "viewport"}
    / Place favicon.ico and apple-touch-icon.png in the root directory
    = stylesheet_link_tag "all"
    = stylesheet_link_tag "font-awesome/css/font-awesome.min"
    = javascript_include_tag "vendor/modernizr-2.6.1.min"
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => "#navlinks", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"} RubyConf India 2015
        #navlinks.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href => "/venue.html"} Venue
            %li
              %a{:href => "/policy.html"} Policy
            %li
              %a{:href => "/about.html"} About
    %header.banner
      .fill
    .container
      = yield
    %footer
      .container.text-center
        %h5
          Contact us
          %a.link{:href => "mailto:team@rubyconfindia.org"} team@rubyconfindia.org
          \/ Follow us on 
          %a.link{:href => "http://twitter.com/rubyconfindia"} Twitter
            
    = javascript_include_tag "main"
    